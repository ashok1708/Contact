<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetail">

    <LinearLayout
        android:id="@+id/luout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:background="#06989B"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"/>



        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="305dp"
            android:src="@drawable/ic_more_vert_black_24dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_below="@id/luout1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="125dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/tvname"
        android:layout_below="@+id/iv_pic"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="28dp"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <View
        android:layout_below="@+id/tvname"
        android:layout_width="380dp"
        android:layout_marginLeft="12dp"
        android:background="@color/colorGrey"
        android:layout_height="0.8dp"
        />

    <LinearLayout
        android:id="@+id/lyout2"
        android:layout_below="@+id/tvname"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"

        android:paddingLeft="30dp"


        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="35dp"
            android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_phone_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:textColor="#000000"
                android:text="Call"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="45dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_textsms_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:textColor="#000000"
                android:text="Text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="45dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_videocam_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Invite"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_below="@+id/lyout2"
        android:layout_width="380dp"
        android:layout_marginLeft="12dp"
        android:background="@color/colorGrey"
        android:layout_height="0.8dp"
        />

    <LinearLayout
        android:id="@+id/lyt2"
        android:layout_below="@+id/lyout2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_height="50dp">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_phone_black_24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9509856067"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mobile-Default"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_textsms_black_24dp"
            android:layout_marginLeft="125dp"/>

    </LinearLayout>
    <View
        android:layout_below="@+id/lyt2"
        android:layout_width="380dp"
        android:layout_marginLeft="12dp"
        android:background="@color/colorGrey"
        android:layout_height="0.8dp"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Edit Contact"
        android:background="@drawable/button_drawable"
        android:layout_marginEnd="50dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="7dp"
        android:drawableLeft="@drawable/ic_edit_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"/>



</RelativeLayout>